@model PizzaShop.IdentityServer.Models.RegisterViewModel
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<form asp-controller="Auth" asp-action="Register" method="post">
	<input type="hidden" asp-for="ReturnUrl" />
	<div>
		<label>Username</label>
		<input asp-for="Username" />
		<span asp-validation-for="Username" />
	</div>
	<div>
		<label>Password</label>
		<input asp-for="Password" />
		<span asp-validation-for="Password" />
	</div>
	<div>
		<label>Confirm password</label>
		<input asp-for="ConfirmPassword" />
		<span asp-validation-for="ConfirmPassword" />
	</div>
	<div>
		<button type="submit">Sign up</button>
	</div>
	<a asp-controller="Auth" asp-action="Login">Login</a>
</form>